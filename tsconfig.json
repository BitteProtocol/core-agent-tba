{
	"compilerOptions": {
		"module": "NodeNext",
		"declaration": true,
		"target": "ES2021",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["server.ts", "helpers/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
