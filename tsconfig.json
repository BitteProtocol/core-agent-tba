{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2022",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["server.ts", "helpers/**/*", "scripts/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
